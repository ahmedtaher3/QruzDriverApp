<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/signin_layout"
        android:background="@color/screens_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/currentPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_background"
            android:hint="Current password"
             android:paddingStart="20dp"
            android:inputType="textPassword"
            android:paddingEnd="20dp"
            android:textColor="@color/blue_color"
            android:textColorHint="@color/edittext_hintColor" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_background"
            android:hint="New password"

            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/blue_color"
            android:textColorHint="@color/edittext_hintColor" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/newPasswordConfirmation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_background"
            android:hint="New password confirmation"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/blue_color"
            android:textColorHint="@color/edittext_hintColor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingStart="50dp"
            android:paddingEnd="50dp">


             <Button
                  android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"

                android:id="@+id/changePass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_gradient_background"
                android:onClick="signUp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Change"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>
</layout>

