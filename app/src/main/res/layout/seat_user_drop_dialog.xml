<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driverImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                    app:civ_border_width="1dp" />


                  <TextView

                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/blue_color"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />

                  <TextView

                    android:id="@+id/bookingID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/border_blue"
                    android:padding="5dp"
                    android:textColor="@color/blue_color"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_call_24"
                            android:tint="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                  <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="عدد المقاعد"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


                  <TextView

                    android:id="@+id/seatsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                  <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="تكلفة الرحلة"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


                  <TextView

                    android:id="@+id/tripCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                  <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="مستحقات سابقة"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


                  <TextView

                    android:id="@+id/preCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="#787878" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                  <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="مستحقات سابقة"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


                  <TextView

                    android:id="@+id/totalCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="#02004A"
                    android:textSize="16dp"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:weightSum="2">


                <Button
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/curved_green_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />

                <Button
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_background"
                    android:text="اخرى"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/curved_red_button"
                    android:text="إلغاء"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                      android:textStyle="bold"
                android:fontFamily="@font/louis_george_cafe_bold"
                 />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
